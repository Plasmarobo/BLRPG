.container.page
  :javascript
    set_vault_hunter(@vault_hunter.id);
  .row
    .row.single
      .field.col-md-3
        Name
        %input{name: "vh_name", class: "txt", value: @vault_hunter.name}
      .field.col-md-1
        Level
        %input{name: "vh_level", class: "num", value: @vault_hunter.level}
      .field.col-md-3
        Player
        %input{name: "vh_player", class: "txt", value: @vault_hunter.user.username}
      .field.col-md-1
        Age
        %input{name: "vh_age", class: "num", value: @vault_hunter.age}
      .field.col-md-1
        Height
        %input{name: "vh_height", class: "num", value: @vault_hunter.height }
      .field.col-md-1
        Weight
        %input{name: "vh_weight", class: "num", value: @vault_hunter.weight}
    .row.single
      .field.col-md-3
        Race
        %input{name: "vh_race", class: "txt", value: @vault_hunter.race}
  .row.spacer
  .row
    .region_title Attributes
    .row.hardbox
      -@vault_hunter.attribute_instances.each do |attribute|
        .cell.col-md-3
          .row
            .col-md-12
              = attribute.name.capitalize
          .row
            .col-md-12
              %input{name: "vh_" + attribute.name, class: "bignum", value: attribute.value}
          .row
            .col-md-12
              = "[" + attribute.short + "]"
  .row.spacer
  .row
    .col-md-6
      .row
        .col-md-6
          .row
            .col-md-12
              Toughness
            .col-md-12
              %input{name: "vh_toughness", class: "bignum", value: @vault_hunter.toughness}
          .row
            .col-md-12
              Current Wounds
            .col-md-12
              %input{name: "vh_wounds", class: "bignum", value: @vault_hunter.wounds}
        .col-md-6
          .row
            .col-md-12
              Shield
            .col-md-12
              %input{name: "vh_shield", class: "bignum", value: @vault_hunter.shield}
          .row
            .col-md-12
              Current Shield
            .col-md-12
              %input{name: "vh_current_shield", class: "bignum", value: @vault_hunter.current_shield}
      .row
        .region_title Attack Actions
        -@vault_hunter.attacks.each_with_index do |attack, index|
          .row.attack_pad
            .row
              .col-md-5.hint Weapon
              .col-md-2.hint Attack Pool
              .col-md-2.hint Damage
            .row
              .col-md-5
                %input{name: "vh_attack_name_" + index.to_s, class: "txt", value: attack.name}
              .col-md-2
                %input{name: "vh_attack_pool_" + index.to_s, class: "num", value: attack.pool}
              .col-md-2
                %input{name: "vh_attack_dmg_" + index.to_s, class: "num", value: attack.dmg}
            .row
              .col-md-12.hint Misc
            .row
              .col-md-12
                %input{name: "vh_attack_misc_" + index.to_s, class: "txt", value: attack.misc}
        .col-md-12{onclick: 'add_attack()'}
          %img{src: "/images/plus.png"}
          Add Attack
      .row.spacer
      .row
        .region_title Loot and Equipment
        .col-md-12
          %textarea{name: "vh_loot", class: "txt_box"}
            = @vault_hunter.loot
        .region_title Money
        .col-md-12
          $
          %input{name: "vh_money", class: "longnum", value: @vault_hunter.money}
    .col-md-6
      .row.proficiencies
        .region_title Proficiencies
        .col-md-5.prof_name.hint
          Name
        .col-md-2.prof_pool.hint
          Pool
        .col-md-2.prof_points.hint
          Points
        .col-md-3.prof_attribute.hint
          Attribute
        -@vault_hunter.proficiencies.each do |proficiency|
          .row
            .col-md-5.prof_name
              = proficiency.name
            .col-md-2.prof_pool
              = proficiency.pool
            .col-md-2.prof_points
              = proficiency.points
            .col-md-3.prof_attribute
              = proficiency_attribute(@vault_hunter, proficiency)
        .col-md-12{onclick: 'add_proficiency()'}
          %img{src: "/images/plus.png"}
          Add Proficiency
      .row.spacer
      .row
        .region_title Action Skills
        .col-md-3.hint
          Name
        .col-md-9.hint
          Description
        -@vault_hunter.skills.each do |action|
          .col-md-3
            = action.name
          .col-md-9
            = action.description
        .col-md-12{onclick: 'add_action()'}
          %img{src: "/images/plus.png"}
          Add Proficiency
  .row.spacer

